<div class="ui middle aligned center aligned grid">
    <div class="column">
    <div class="ui compact message">
        <p>
            <%= flash[:message] %>
            <%= flash[:login_please] %>
        </p>
    </div>
        <h3 class="ui blue image header"> 
            <div class="content"> Login </div>
        </h3>

        <%= form_with model: @user, class: "ui large form" do |f| %>
            <%= f.label :user_email %>
            <%= f.text_field :email %>
            <br>
            <%= f.label :user_pass %>
            <%= f.text_field :user_pass %>
            <br>
            <%= f.submit "Login"%>
        <% end %>

        <br>
        <%= link_to "Create New User", new_user_path %>
    </div>
</div>